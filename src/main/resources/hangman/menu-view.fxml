<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane styleClass="bg-container" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #000000" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hangman.MenuController">

    <VBox fx:id="loginArea" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" style="-fx-alignment: center; -fx-spacing: 7px" >
        <Label styleClass="titleTxt" text="Welcome">
          <VBox.margin>
             <Insets top="10.0" bottom="20.0"/>
          </VBox.margin>
        </Label>

        <HBox style="-fx-alignment: center; -fx-spacing: 5px; -fx-font-size: 16px;">
            <Label text="Username: " styleClass="inputLabel"/>
            <TextField fx:id="usernameInput" styleClass="inputField"  onAction="#searchUsername"/>
        </HBox>

        <HBox fx:id="nameInputBox" style="-fx-alignment: center; -fx-spacing: 5px; -fx-font-size: 16px;">
            <Label text="Name:       " styleClass="inputLabel"/>
            <TextField fx:id="nameInput" styleClass="inputField"/>
        </HBox>

        <HBox style="-fx-alignment: center; -fx-spacing: 5px; -fx-font-size: 16px;">
            <Label text="Password: " styleClass="inputLabel"/>
            <PasswordField fx:id="passwordInput" styleClass="inputField" onAction="#sendUserData"/>
        </HBox>

        <Button fx:id="sendDataBtn" text="Sign in" styleClass="menuBtn" onAction="#sendUserData">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>

    </VBox>

    <VBox fx:id="menuArea" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" style="-fx-alignment: center; -fx-spacing: 7px;">
        <Label text="Hangman Game" styleClass="titleTxt" style="-fx-border-width: 0px 0px 3px 0px; -fx-border-color: black;">
          <HBox.margin>
             <Insets top="20.0" bottom="10.0"/>
          </HBox.margin>
        </Label>
        <HBox style="-fx-alignment: center; -fx-spacing: 50px; ">
            <Label fx:id="usernameLabel" styleClass="userinfoLabel"  />
            <Label fx:id="nameLabel" styleClass="userinfoLabel" />
            <HBox.margin>
                <Insets bottom="5.0"/>
            </HBox.margin>
        </HBox>

        <HBox style="-fx-alignment: center; -fx-spacing: 50px; ">
            <Button text="Play!" styleClass="menuBtn" onAction="#playGameHandler"/>
            <Button text="History of Games" styleClass="menuBtn" onAction="#showHistoryGames"/>
            <Button text="Leaderboard" styleClass="menuBtn" onAction="#showHistoryGames"/>
        </HBox>

    </VBox>

    <Label AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" fx:id="toastText" styleClass="toastText"/>
</AnchorPane>
